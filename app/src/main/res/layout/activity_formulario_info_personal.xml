<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formularios.FormularioInfoPersonal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="373dp"
            android:layout_height="69dp"
            android:layout_marginTop="36dp"
            android:text="¿Algun miembro de su familia(mamá,papá,tios,abuelos) han tenido enfermedades cardiovasculares?"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13">

                <RadioButton
                    android:id="@+id/RegRadbtnSiG"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Si"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

                <RadioButton
                    android:id="@+id/RegRadbtnNoG"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No"
                    android:textSize="12dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/etApellido"
            android:layout_width="359dp"
            android:layout_height="49dp"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8"></EditText>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="69dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="12dp"
                    android:text="Apellido"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.076"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etNombre" />

        <EditText
            android:id="@+id/etFechaEdad"
            android:layout_width="359dp"
            android:layout_height="49dp"
            android:hint="dd/mm/aa"
            android:inputType="number"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/etApellido"
            app:layout_constraintTop_toBottomOf="@+id/textView11"></EditText>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="121dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="12dp"
                    android:text="Fecha Nacimiento"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.089"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etApellido" />


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/etFechaEdad">


                <RadioButton
                    android:id="@+id/RegRadbtnMujer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Mujer"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/RegRadbtnHombre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Hombre"
                    android:textSize="12dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="121dp"
            android:layout_height="18dp"
            android:layout_marginTop="32dp"
            android:text="Genero:"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/etFechaEdad" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Informacion Personal"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Necesitamos mas información para finalizar"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.222"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="69dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="20dp"
                    android:text="Nombre:"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.078"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="359dp"
            android:layout_height="49dp"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7"></EditText>

                <ImageButton
                    android:id="@+id/btnSiguienteFormul"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/siguienteboton1" />
</androidx.constraintlayout.widget.ConstraintLayout>

